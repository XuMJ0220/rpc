{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug test1",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/middle_out/a.out",  // 指定可执行文件路径
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
